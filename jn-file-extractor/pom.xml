<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jill.jn</groupId>
    <artifactId>jn-file-extractor</artifactId>
    <packaging>jar</packaging>
    <version>1.0.1</version>
    <name>jn-file-extractor</name>

    <parent>
        <groupId>org.jill</groupId>
        <artifactId>jill-parent</artifactId>
        <version>0.2.1</version>
        <relativePath>../jill_parent/pom.xml</relativePath>
    </parent>
    
    <description>Tool to extract content Jill Trilogy map file.</description>

    <dependencies>
        <dependency>
            <groupId>org.jill.jn</groupId>
            <artifactId>jn-file-api</artifactId>
        </dependency>        
        <dependency>
            <groupId>org.jill.jn</groupId>
            <artifactId>jn-file</artifactId>
        </dependency>        
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
        </dependency>
       <dependency>
            <groupId>org.jill.sha</groupId>
            <artifactId>sha-file-api</artifactId>
        </dependency>        
        <dependency>
            <groupId>org.jill.sha</groupId>
            <artifactId>sha-file</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jill.dma</groupId>
            <artifactId>dma-file-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jill.dma</groupId>
            <artifactId>dma-file</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jill.file</groupId>
            <artifactId>abstractfile</artifactId>
        </dependency>      
    </dependencies>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>org.jill.jn.JnFileExtractor</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>bundle</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <version>2.1</version>
                        <executions>
                          <execution>
                            <phase>package</phase>
                            <goals>
                              <goal>shade</goal>
                            </goals>
                            <configuration>
                              <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                  <mainClass>org.jill.jn.JnFileExtractor</mainClass>
                                </transformer>
                              </transformers>
                              <minimizeJar>true</minimizeJar>
                              <finalName>${project.build.finalName}-bundle</finalName>
                            </configuration>
                          </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
